<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>
	<PropertyGroup>
		<NativeOutputPath>../../target/$(Configuration.ToLowerInvariant())/</NativeOutputPath>
	</PropertyGroup>
	<ItemGroup>
		<Compile Include="..\..\polyglot_csharp\bindings\polyglot_csharp.cs" Link="polyglot_csharp.cs" />
	</ItemGroup>
	<ItemGroup>
		<None Condition="$([MSBuild]::IsOsPlatform('MacOS'))" Include="$(NativeOutputPath)libpolyglot_csharp.dylib" CopyToOutputDirectory="PreserveNewest" />
		<None Condition="$([MSBuild]::IsOsPlatform('Linux'))" Include="$(NativeOutputPath)libpolyglot_csharp.so" CopyToOutputDirectory="PreserveNewest" />
		<None Condition="$([MSBuild]::IsOsPlatform('Windows'))" Include="$(NativeOutputPath)polyglot_csharp.dll" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>
</Project>
